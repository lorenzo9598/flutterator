/*
 * Value validators template for input validation
 * Generates validation functions for different data types:
 * - String validation (empty check and custom rules)
 * - Numeric validation (int, double)
 * - Boolean validation  
 * - DateTime validation
 * 
 * Uses Either types for functional error handling
 * Returns validation failures or valid values
 */

import 'package:dartz/dartz.dart';
import 'package:[[project_name]]/core/model/failures.dart';

{% for field in field_list %}
{% if field.name != 'id' %}
{% if field.type == 'String' %}
Either<ValueFailure<String>, String> validate[[field.pascal_name]](String input) {
  if (input.isEmpty) {
    return left(ValueFailure.empty(failedValue: input));
  }
  // Additional string validations can be added here
  return right(input);
}
{% elif field.type == 'int' %}
Either<ValueFailure<int>, int> validate[[field.pascal_name]](int input) {
  // Additional int validations can be added here
  return right(input);
}
{% elif field.type == 'double' %}
Either<ValueFailure<double>, double> validate[[field.pascal_name]](double input) {
  // Additional double validations can be added here
  return right(input);
}
{% elif field.type == 'bool' %}
Either<ValueFailure<bool>, bool> validate[[field.pascal_name]](bool input) {
  // Boolean validation - always valid
  // Additional boolean validations can be added here
  return right(input);
}
{% elif field.type == 'DateTime' %}
Either<ValueFailure<DateTime>, DateTime> validate[[field.pascal_name]](DateTime input) {
  // Additional datetime validations can be added here
  return right(input);
}
{% else %}
Either<ValueFailure<String>, String> validate[[field.pascal_name]](String input) {
  if (input.isEmpty) {
    return left(ValueFailure.empty(failedValue: input));
  }
  // Additional string validations can be added here
  return right(input);
}
{% endif %}
{% endif %}
{% endfor %}
