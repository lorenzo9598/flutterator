import 'package:dartz/dartz.dart';
import 'package:flutter_bloc/flutter_bloc.dart';
import 'package:freezed_annotation/freezed_annotation.dart';
import 'package:injectable/injectable.dart';
{% if domain_model_name and domain_folder %}
import 'package:[[project_name]]/[[domain_folder]]/[[domain_model_name]]/model/value_objects.dart';
{% endif %}

part '[[component_name]]_form_event.dart';
part '[[component_name]]_form_state.dart';
part '[[component_name]]_form_bloc.freezed.dart';

@injectable
class [[pascal_name]]FormBloc extends Bloc<[[pascal_name]]FormEvent, [[pascal_name]]FormState> {
  [[pascal_name]]FormBloc() : super([[pascal_name]]FormState.initial()) {
{% for field in field_list %}
{% if field.name != 'id' %}
    on<[[field.pascal_name]]Changed>(_on[[field.pascal_name]]Changed);
{% endif %}
{% endfor %}
    on<Submit>(_onSubmit);
  }

{% for field in field_list %}
{% if field.name != 'id' %}
  void _on[[field.pascal_name]]Changed([[field.pascal_name]]Changed event, Emitter<[[pascal_name]]FormState> emit) {
    emit(state.copyWith(
      [[field.name]]: [[field.pascal_name]](event.[[field.name]]Str),
      showErrorMessages: false,
    ));
  }
{% endif %}
{% endfor %}

  void _onSubmit(Submit event, Emitter<[[pascal_name]]FormState> emit) async {
    emit(state.copyWith(isSubmitting: true, showErrorMessages: false));
    // TODO: Implement submit logic here
    emit(state.copyWith(isSubmitting: false));
  }
}
