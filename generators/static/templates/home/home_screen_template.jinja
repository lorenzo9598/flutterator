/*
 * Home screen template with navigation structure
 * Generates the main application screen with:
 * - Bottom navigation bar integration
 * - Multiple tab screens based on configuration
 * - Optional drawer support
 * - StatefulWidget for navigation state management
 * 
 * This serves as the main navigation hub for the application
 * with configurable navigation items and screens
 */

import 'package:flutter/material.dart';
import 'package:[[project_name]]/core/presentation/bottom_nav_bar.dart';
{% for nav_item in nav_items %}
import 'package:[[project_name]]/features/home/[[nav_item.name]]_screen.dart';
{% endfor %}
{% if has_drawer %}
import 'package:[[project_name]]/core/presentation/app_drawer.dart';
{% endif %}

class HomePage extends StatefulWidget {
  static const String routeName = '/home';

  const HomePage({super.key});

  @override
  State<HomePage> createState() => _HomePageState();
}

class _HomePageState extends State<HomePage> {
  int _selectedIndex = 0;

  final List<Widget> _pages = [
    const Center(child: Text('Home Content')),
{% for nav_item in nav_items %}
    const [[nav_item.name|title]]Screen(),
{% endfor %}
  ];

  void _onItemTapped(int index) {
    setState(() {
      _selectedIndex = index;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Home'),
      ),
{% if has_drawer %}
      drawer: const AppDrawer(),
{% endif %}
      body: _pages[_selectedIndex],
      bottomNavigationBar: BottomNavBar(
        currentIndex: _selectedIndex,
        onTap: _onItemTapped,
      ),
    );
  }
}
